<?xml version="1.0" encoding="utf-8"?>
<!-- Robert Parker Using a pixel 3 Api 30 -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="6"
    android:paddingBottom="2dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_rowWeight="0
"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:background="#FFEB3B"
        android:text="@string/tic_tac_toe"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_rowWeight="0
"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:background="#FFFFFF"
        android:text="@string/player_1_go"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="1"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="2" />

    <ImageView
        android:id="@+id/imageButton3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="3" />

    <ImageView
        android:id="@+id/imageButton4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="4" />

    <ImageView
        android:id="@+id/imageButton5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="5" />

    <ImageView
        android:id="@+id/imageButton6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="6" />

    <ImageView
        android:id="@+id/imageButton7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="7" />

    <ImageView
        android:id="@+id/imageButton8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="8" />

    <ImageView
        android:id="@+id/imageButton9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/game_board"
        android:onClick="game_grid_pressed"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:tag="9" />


    <Button
        android:id="@+id/btnNextPlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="0.5"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#4CAF50"
        android:onClick="next_player"
        android:text="@string/next_player"
        android:textColor="#263238"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="0.5"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#FD3333"
        android:contentDescription="@string/reset_button"
        android:onClick="reset_game"
        android:scaleType="center"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,RedundantDescriptionCheck" />

</GridLayout>